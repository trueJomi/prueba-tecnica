{ 
  "env": { 
    "es2021": true, 
    "node": true 
  }, 
  "root": true, 
  "extends": [ 
    "standard-with-typescript", 
    "plugin:@typescript-eslint/recommended" 
  ], 
  "parserOptions": { 
    "ecmaVersion": "latest", 
    "sourceType": "module", 
    "tsconfigRootDir": "./tsconfig.json" 
  }, 
  "ignorePatterns": [ 
    "node_modules", 
    "dist" 
  ], 
  "plugins": [ 
    "@typescript-eslint" 
  ], 
  "rules": { 
    "@typescript-eslint/explicit-function-return-type": "off", 
    "@typescript-eslint/no-explicit-any": "off", 
    "max-len": ["error", { "code": 120 }] 
  } 
} 
