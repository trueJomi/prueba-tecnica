{ 
  "compilerOptions": { 
    "target": "ES2020", 
    "module": "NodeNext", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "resolveJsonModule": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "allowJs": true 
  }, 
  "include": [ 
    "./**/*.ts", 
    "./src/**/*.ts" 
  ], 
  "exclude": ["node_modules", "dist"] 
} 
